{% extends 'base.html.twig' %}

{% block title %}Mettre à jour votre mot-de-passe{% endblock %}

{% block body %}
<div class="container my-5">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Mettre à jour votre mot-de-passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse email et nous vous enverrons un lien de réinitialisation de votre mot-de-passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer l'email</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}