{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="container my-5" action="{{ path('login') }}" method="post">

        <div class="form-group">
            <label for="username">Email :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email"/>
        </div>

        <div class="form-group">
            <label for="password">Mot-de-passe :</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Mot-de-passe"/>
        <a href="{{ path('app_forgot_password_request') }}">Mot-de-passe oubli√© ?</a>
        </div>
        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="{{ path('home') }}" value="/account"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary m-t-25">Se connecter</button>
        <div class="d-flex justify-content-start mt-2">
            <p>Pas encore inscrit ?</p>
            <a class="mx-2" href="{{ path('app_register') }}">S'inscrire</a>
        </div>
    </form>

{% endblock %}
