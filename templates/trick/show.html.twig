{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>{{ trick.nameTrick }}</h1>
    <div class="d-flex justify-content-center justify-content-md-between my-5">
        <div>
            <h2>{{ trick.catTrick }}</h2>
            <p>{{ trick.description }}</p>
        </div>
        <div>
            <img width="500px" src="/uploads/{{ trick.thumbnail }}" alt="{{ trick.nameTrick }}">
        </div>
    </div>


    <a href="{{ path('app_trick_index') }}">back to list</a>

    <a href="{{ path('app_trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}
</div>

<div class="container my-5">
    {% for comments in trick.comments %}
    <h1>Commentaires</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Content</th>
            <td>{{ comments.content }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ comments.createdAt ? comments.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">back to list</a>

    <a href="{{ path('app_comment_edit', {'id': comments.id}) }}">edit</a>
    {{ include('comment/_delete_form.html.twig') }}
    {% endfor %}
    {{ include('comment/_form.html.twig') }}
</div>

{% endblock %}